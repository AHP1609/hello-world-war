@Library('shared-library-prac@main') _
pipeline {
  agent none
  environment {
    ARTIFACTORY_CREDENTIALS = credentials('jfrog_artifactory_cred')
  }
   stages
  {
    stage('checkout')
    {
      agent { label 'builder'}
      steps{
        checkout_stage()
      }
    }
    stage('build')
    {
      agent { label 'builder'}
      steps{
        build_stage()
      }
    }
    stage('publish')
    {
      agent { label 'builder'}
      steps{
        publish_stage()
      }
    }
    stage('deploy')
    {
      agent { label 'deployer'}
      steps{
        deploy_stage(${BUILD_NUMBER})
        
  }
}
}
}
        
